{
  "name": "Yamtrack",
  "image": "mcr.microsoft.com/devcontainers/python:0-3.9-bullseye",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "postCreateCommand": "pip install --user -r requirements_dev.txt && python src/manage.py migrate",
  "postAttachCommand": {
    "server": "python src/manage.py runserver"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "editor.inlineSuggest.enabled": true,
        "files.autoSave": "afterDelay",
        "workbench.colorTheme": "Visual Studio Dark",
        "editor.fontFamily": "\"Mononoki Nerd Font Mono\""
      },
      "extensions": [
        "batisteo.vscode-django",
        "charliermarsh.ruff",
        "christian-kohler.path-intellisense",
        "ecmel.vscode-html-css",
        "esbenp.prettier-vscode",
        "formulahendry.auto-close-tag",
        "github.copilot",
        "github.copilot-chat",
        "monosans.djlint",
        "ms-python.black-formatter",
        "ms-python.python",
        "qwtel.sqlite-viewer",
        "visualstudioexptteam.vscodeintellic",
        "zignd.html-css-class-completion"
      ]
    }
  },
  "portsAttributes": {
    "8000": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [8000]
}
