{
    "name": "Yamtrack",
    "image": "mcr.microsoft.com/devcontainers/python:0-3.9-bullseye",
    "postCreateCommand": "pip install --user -r requirements_dev.txt && python src/manage.py migrate",
    "postAttachCommand": {
      "server": "python src/manage.py runserver"
    },
    "customizations": {
      "vscode": {
        "extensions": [
          "formulahendry.auto-close-tag",
          "ms-python.black-formatter",
          "batisteo.vscode-django",
          "ms-python.flake8",
          "github.copilot",
          "github.copilot-chat",
          "ecmel.vscode-html-css",
          "visualstudioexptteam.vscodeintellic",
          "zignd.html-css-class-completion",
          "christian-kohler.path-intellisense",
          "esbenp.prettier-vscode",
          "ms-python.python"
        ]
      }
    },
    "portsAttributes": {
      "8000": {
        "label": "Application",
        "onAutoForward": "openPreview"
      }
    },
    "forwardPorts": [8000]
}